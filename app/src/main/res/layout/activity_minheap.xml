<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MinHeap">

    <com.example.myapplication.MinHeapView
        android:id="@+id/minHeapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <EditText
        android:id="@+id/insertValueEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter value to insert"
        android:inputType="number" />

    <Button
        android:id="@+id/insertButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert" />

    <Button
        android:id="@+id/extractMinButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Extract Min" />

</LinearLayout>
