<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/app_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnimationActivity">

    <Button
        android:id="@+id/gotoAVL"
        android:layout_width="211dp"
        android:layout_height="60dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/button_background"
        android:text="AVL"
        android:textAllCaps="false"
        android:textColor="@color/tanAccent"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gotoHeap"
        android:layout_width="198dp"
        android:layout_height="64dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_background"
        android:text="Binary Heap"
        android:textAllCaps="false"
        android:textColor="@color/tanAccent"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gotoAVL" />

    <Button
        android:id="@+id/gotoCartesiantree"
        android:layout_width="224dp"
        android:layout_height="58dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_background"
        android:text="Cartesian Tree"
        android:textAllCaps="false"
        android:textColor="@color/tanAccent"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gotoHeap" />

    <Button
        android:id="@+id/gotoSplay"
        android:layout_width="192dp"
        android:layout_height="62dp"
        android:layout_marginTop="53dp"
        android:background="@drawable/button_background"
        android:text="Splay Tree"
        android:textAllCaps="false"
        android:textColor="@color/tanAccent"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gotoCartesiantree"
        app:layout_constraintVertical_bias="0.133" />
</androidx.constraintlayout.widget.ConstraintLayout>